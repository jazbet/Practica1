<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".UserForm"
    android:orientation="vertical"
    android:id="@+id/imgAndroid">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:id="@+id/imageView"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Contact"
        android:id="@+id/txtContact"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:textSize="30dp"
        android:textStyle="bold" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/inputName"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:hint="Name" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/inputSurname"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:hint="Surname" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/inputAge"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:hint="Age" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="150dp">

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="1"
            android:id="@+id/btnUno"
            android:layout_gravity="center"
            android:layout_weight="4"
            android:onClick="onClickName" />

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="2"
            android:id="@+id/btnDos"
            android:layout_gravity="center"
            android:layout_weight="4"
            android:onClick="onClickSurname" />

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="3"
            android:id="@+id/btnTres"
            android:layout_gravity="center"
            android:layout_weight="4"
            android:onClick="onClickAge" />

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="4"
            android:id="@+id/btnCuatro"
            android:layout_gravity="center"
            android:layout_weight="4"
            android:onClick="onClickImg" />

    </LinearLayout>

</LinearLayout>
